<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presenter.ScannerActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Dogs"
        android:gravity="center_horizontal"
        android:textSize="25sp"/>

    <ListView
        android:id="@+id/scanner_scannedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:isScrollContainer="true"
        android:focusableInTouchMode="true"
        android:listSelector="@color/colorPrimary"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/scanner_card_view"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scanner_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/name"/>
                <TextView
                android:id="@+id/scanner_name_dog"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scanner_size_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/size"/>
                <TextView
                    android:id="@+id/scanner_size_dog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scanner_color_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/color"/>
                <TextView
                    android:id="@+id/scanner_color_dog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scanner_breed_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/breed"/>
                <TextView
                    android:id="@+id/scanner_breed_dog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ListView>



</LinearLayout>