<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >


        <TextView
            android:id="@+id/layout_popup_txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:fontFamily="@font/merienda_one"
            android:text="@string/choose_dog" />

        <ListView
            android:id="@+id/popup_dog_name_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/popup_layout_errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/you_don_t_have_any_dogs"
            android:visibility="gone"

            />

        <Button
            android:id="@+id/popup_layout_cancel"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="Cancel"
            android:fontFamily="@font/merienda_one"
            android:background="@drawable/asset22h"
            android:onClick="cancelPopUp"
            />

</LinearLayout>
