<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presenter.Fragments.ProfileFragment"
    android:orientation="vertical"
    android:background="@drawable/pattern02"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileFragmentImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/asset6h"
            app:civ_border_color="@color/light_blue"
            app:civ_border_width="5dp" />

        <ImageButton
            android:id="@+id/profileFragmentImageEditButton"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profileFragmentImage"
            android:layout_toEndOf="@+id/profileFragmentImage"
            android:background="@drawable/edit" />
    </RelativeLayout>


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/profileFragmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:fontFamily="@font/merienda_one"
            android:inputType="textCapWords"
            android:text="Full Name"
            android:textColor="@color/darkgrey" />




</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/profileFragmentPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/merienda_one"
        android:text="@string/phone_number"
        android:textColor="@color/darkgrey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileFragmentEditPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:fontFamily="@font/merienda_one"
        android:textColor="@color/darkgrey" />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/profileFragmentAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/merienda_one"
        android:text="@string/address"
        android:textColor="@color/darkgrey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileFragmentEditAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:fontFamily="@font/merienda_one"
        android:textColor="@color/darkgrey" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/profileFragmentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/merienda_one"
        android:text="@string/e_mail"
        android:textColor="@color/darkgrey"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileFragmentEditEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:fontFamily="@font/merienda_one"
        android:textColor="@color/darkgrey" />

</LinearLayout>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/merienda_one"
        android:paddingTop="5dp"
        android:text="@string/my_dogs"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/profile_Fragment_dogs_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.70" />

        <ImageButton
            android:id="@+id/profileFramentAddButton"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:layout_weight="0.20"
            android:background="@drawable/asset13h"
            android:src="@drawable/add" />

    </LinearLayout>

</LinearLayout>